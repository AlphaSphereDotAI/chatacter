{
	"name": "Chatacter",
	"build": {
		"context": "..",
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"settings": {
				"python.defaultInterpreterPath": "./.venv/bin/python"
			},
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"usernamehw.errorlens",
				"formulahendry.code-runner",
				"streetsidesoftware.code-spell-checker",
				"Dart-Code.flutter",
				"charliermarsh.ruff",
				"Meezilla.json",
				"richie5um2.vscode-sort-json",
				"ms-azuretools.vscode-docker",
				"Dart-Code.dart-code",
				"mhutchie.git-graph",
				"GitHub.copilot-chat",
				"twixes.pypi-assistant",
				"sourcery.sourcery",
				"WakaTime.vscode-wakatime",
				"dotenv.dotenv-vscode",
				"tamasfe.even-better-toml"
			]
		}
	},
	"updateContentCommand": "uv pip -v sync requirements.txt",
	"postCreateCommand": "npx --yes dotenv-vault@latest",
	"postAttachCommand": "npx -yes dotenv-vault pull && npx -yes dotenv-vault push",
	"remoteUser": "root",
	"forwardPorts": [
		8000,
		8501
	]
}